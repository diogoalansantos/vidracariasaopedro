<%- include('../includes/head') %>
</head>

<body>
    <%- include('../includes/nav') %>
    <main>
        <div class="container">
            <div class="jumbotron jumbotron">
                <div class="container">
                    <h1 class="display-5">Novo produto</h1>
                    <p class="lead">Preencha os dados abaixo para prosseguir com a criação.</p>
                </div>
            </div>
        </div>
        <div class="container mb-5">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <%- include('../includes/errorBox') %>
                    <form method="POST" action="/admin/catalogo/new" enctype="multipart/form-data">
                        <div class="form-group mb-4">
                            <label for="title">Título: </label>
                            <input class="form-control
                            <% if(form){ %>
                                <%= form.hasError.includes('title') ? 'is-invalid' : '' %>
                            <% } %>""
                            value="<%=form ? form.values.title : '' %>"
                            maxLength="40" class="form-control"
                            type="text"
                            name="title"
                            id="title">
                        </div>

                        <div class="form-group mb-4">
                            <label for="description">Descrição: </label>

                            <textarea 
                            maxLength="150"
                            class="form-control 
                            <% if(form){ %>
                                <%= form.hasError.includes('description') ? 'is-invalid' : '' %>
                            <% } %>"
                            type="text" name="description" id="description"><%= form ? form.values.description : ''%></textarea>
                        </div>

                        <div class="form-group mb-4">
                            <label for="categoria" name="categoria">Categoria</label>
                            <select class="form-control
                            <% if(form){ %>
                                <%= form.hasError.includes('categoria') ? 'is-invalid' : '' %>
                            <% } %>"" 
                            id="categoria" 
                            name="categoria">
                                <option value="boxes">Boxes</option>
                                <option value="espelhosebisotes">Espelhos e Bisotês</option>
                                <option value="esquadrias">Esquadrias de Alumínio</option>
                                <option value="ferragens">Ferragens para Vidro</option>
                                <option value="guardacorpocorrimao">Guarda Corpo/Corrimão</option>
                                <option value="kitversatiktruck">Kit Versatik Truck</option>
                                <option value="vidrotemperado">Vidro Temperado</option>
                                <option value="telhadodevidro">Telhado de Vidro</option>
                                <option value="vidrocomum">Vidro Comum</option>
                                <option value="vidrolaminado">Vidro Laminado</option>
                            </select>
                        </div>

                        <div class="form-group mb-4">
                            <label for="image">Imagem</label>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input
                                <% if(form){ %>
                                    <%= form.hasError.includes('image') ? 'is-invalid' : '' %>
                                <% } %>"" 
                                name="image" 
                                id="image">
                                <label class="custom-file-label" for="image">Escolha a imagem</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="destaque" name="destaque">Destaque</label>
                            <select class="form-control" id="destaque" name="destaque">
                                <option value="false">Não</option>
                                <option value="true">Sim</option>
                            </select>
                        </div>

                        <input class="form-control" type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button class="btn btn-primary mt-4" type="submit"> Criar Produto </button>
                    </form>

                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </main>
</body>

<%- include('../includes/end') %>

</html>